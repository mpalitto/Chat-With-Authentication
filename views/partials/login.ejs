<!-- views/partialslogin.ejs -->
<!doctype html>

<script src="/ctrls/authController.js" type="text/javascript"></script>


<div class="container">

    <!--div class="col-sm-6 col-sm-offset-3"  ng-controller="loginController"-->
    <div class="col-sm-6 col-sm-offset-3"  ng-controller="authController">
    
        <h1><span class="fa fa-sign-in"></span> Login</h1>
        
        
        <!-- LOGIN FORM -->
        <!--form action="/login" method="post"-->
        <form ng-submit="submitAuth('login')">
            <div class="form-group">
                <label>user name</label>
                <input type="text" class="form-control" name="username" ng-model="authData.username">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password" ng-model="authData.password">
            </div>
            
            <button type="submit" class="btn btn-warning btn-lg">Login</button>
        </form>
        
        <hr>
        
        <p>Need an account? <a href="/signup">Signup</a></p>
        <p>Or go <a href="/">home</a>.</p>
    
    </div>

</div>
